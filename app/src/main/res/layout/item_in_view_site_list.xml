<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_in_manage_site_list"
    android:padding="16dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:id="@+id/view_site_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/view_site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/instrumentsansbold"
            android:textColor="@color/white"
            android:layout_marginBottom="3dp" />

        <TextView
            android:id="@+id/view_site_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site Address"
            android:fontFamily="@font/instrumentsansbold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/view_site_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site Admin"
            android:fontFamily="@font/instrumentsansbold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/view_site_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="12sp"
            android:fontFamily="@font/instrumentsans"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/view_site_operating_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operating Hours"
            android:textSize="12sp"
            android:fontFamily="@font/instrumentsans"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/view_site_info"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/view_manage_site_button"
            android:paddingVertical="7dp"
            android:id="@+id/view_site_view_event_button"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_event_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All Site Events"
                android:textColor="@color/white"
                android:fontFamily="@font/instrumentsansbold"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/follow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_album_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:backgroundTint="@color/transparent"
        android:contentDescription="Follow Button"
        android:layout_marginTop="-1dp"
        app:tint="@color/white"/>

    <ImageButton
        android:id="@+id/unfollow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:backgroundTint="@color/transparent"
        android:contentDescription="Follow Button"
        android:layout_marginTop="-1dp"
        app:tint="@color/white"/>

</RelativeLayout>