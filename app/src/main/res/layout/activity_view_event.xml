<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/seashell"
    tools:context=".activities.ViewEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp">

        <ImageButton
            android:id="@+id/view_event_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/primary"
            />

        <TextView
            android:id="@+id/view_event_site_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/instrumentsansbold"
            android:text="Site Name"
            android:textColor="@color/primary"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_event_events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="36dp"
        android:textSize="20sp"
        android:textColor="@color/primary"
        android:text="No donation sites found.\nTap the '+' button to create one."
        android:gravity="center"
        android:id="@+id/view_event_manage_event_empty_inform"
        android:visibility="gone"
        />

</FrameLayout>