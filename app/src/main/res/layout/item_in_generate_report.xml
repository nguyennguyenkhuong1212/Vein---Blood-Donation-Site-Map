<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/item_in_manage_site_list"
    android:padding="16dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/generate_report_event_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/instrumentsansbold"
        android:textColor="@color/white"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/generate_report_event_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:fontFamily="@font/instrumentsansbold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/generate_report_event_start_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:fontFamily="@font/instrumentsans"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/generate_report_event_end_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:fontFamily="@font/instrumentsans"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/generate_report_event_needed_blood_types_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Needed Blood Types"
        android:fontFamily="@font/instrumentsans"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/view_manage_site_button"
        android:paddingVertical="7dp"
        android:layout_marginTop="10dp"
        android:id="@+id/generate_report_button"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_chart_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Report"
            android:textColor="@color/white"
            android:fontFamily="@font/instrumentsansbold"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            />

    </LinearLayout>

</LinearLayout>