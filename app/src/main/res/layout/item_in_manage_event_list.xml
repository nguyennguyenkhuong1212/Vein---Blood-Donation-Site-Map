<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_in_manage_site_list"
    android:padding="16dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/event_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/instrumentsansbold"
        android:textColor="@color/white"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/event_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:fontFamily="@font/instrumentsansbold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/event_start_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:fontFamily="@font/instrumentsans"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/event_end_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:fontFamily="@font/instrumentsans"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/event_recurring_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a recurring event; you can participate in future occurrences."
        android:fontFamily="@font/instrumentsans"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

</LinearLayout>