<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_in_site_list"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp">

        <TextView
            android:id="@+id/site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/instrumentsansbold"
            android:textColor="@color/white"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/site_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site Address"
            android:fontFamily="@font/instrumentsansbold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/site_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="12sp"
            android:fontFamily="@font/instrumentsans"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/site_operating_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operating Hours"
            android:textSize="12sp"
            android:fontFamily="@font/instrumentsans"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/site_needed_blood_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Needed Blood Types"
            android:textSize="12sp"
            android:fontFamily="@font/instrumentsans"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_edit_24"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:tint="@color/white"
        android:layout_marginStart="15dp"
        />

</LinearLayout>